<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.divan.arodarmty.CreateRodadaActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Crear Evento"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:id="@+id/textTitle"
        android:maxLines="1"
        />
    <android.support.design.widget.TextInputEditText
        android:layout_below="@id/textTitle"
        android:id="@+id/titleInput"
        android:hint="Titulo del evento"
        android:textSize="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@id/titleInput"
        android:id="@+id/buttonbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button_bg"
            android:text="Tiempo"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button_bg"
            android:text="Distancia"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button_bg"
            android:text="Velocidad"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/directions"
        android:layout_below="@id/buttonbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_map_black_24dp"
            android:padding="6dp"
            android:background = "selectableItemBackgroundBorderless"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Ruta"
            android:textSize="16dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:padding="6dp"
            android:background = "selectableItemBackgroundBorderless"/>
    </LinearLayout>
    <EditText
        android:id="@+id/textDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/titleInput"
        android:layout_below="@id/directions"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        android:gravity="start"
        android:hint="DescipciÃ³n del evento"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDescription"
        android:text="Date" />

    <EditText
        android:id="@+id/kilometers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kilometros"
        android:layout_below="@id/dateText"
        android:layout_margin="12dp"
        android:maxLines="1"
        android:textSize="12sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_below="@id/kilometers">
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageinput"
        android:text="Imagen" />
    </LinearLayout>
</RelativeLayout>
